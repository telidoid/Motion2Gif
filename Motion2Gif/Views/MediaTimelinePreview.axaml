<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mediaTimelineControl1="clr-namespace:Motion2Gif.Controls.MediaTimelineControl"
        xmlns:rangeSelectorControl="clr-namespace:Motion2Gif.Controls.RangeSelectorControl"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Motion2Gif.Views.MediaTimelinePreview"
        Title="MediaTimelinePreview" Background="Gray">
    <Grid Margin="20 0">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" ClipToBounds="False" Background="Transparent">
            <ScrollViewer.Styles>
                <Style Selector="ScrollViewer /template/ ScrollContentPresenter">
                    <Setter Property="ClipToBounds" Value="False" />
                </Style>
            </ScrollViewer.Styles>
            
            <Grid Height="70"
                  Width="1000000"
                  RowDefinitions="15, *, *"
                  ClipToBounds="True"
                  Background="Transparent">
                
                <mediaTimelineControl1:TimelineControl
                    Grid.Row="1" />
                
                <mediaTimelineControl1:MediaTimelineControl
                    Grid.Row="2" />
                    
                <rangeSelectorControl:TimeRangeSelectorControl
                    Grid.Row="2"
                    ClipToBounds="False"
                    />
                    
                <mediaTimelineControl1:PlayHeadControl Grid.Row="0" Grid.RowSpan="3"/>
            </Grid>
            
        </ScrollViewer>
    </Grid>
</Window>